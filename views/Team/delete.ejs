<% if (team.error) { %>
<div class="alert alert-danger" role="alert"><%- team.error %></div>
<% } %>

<div class="card-body">

  <table class="table">
    <thead>
      <tr>
        <th scope="col">TeamName</th>
        <th scope="col">TeamId</th>
        <th width=>Action</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <th scope="row"><%= team.id %></th>
        <td><%= team.name%></td>
        <td><%= team.id%></td>
        <td>
          <form action="/team/delete/<%=team.id%>" method="post">
            <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are You sure?')" />
          </form>
        </td>
      </tr>

    </tbody>
  </table>